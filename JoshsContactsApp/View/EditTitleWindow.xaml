<Window x:Class="JoshsNoteTakingApp.View.EditTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoshsNoteTakingApp.View"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Change Note Title" Height="150" Width="300">
    
    <StackPanel Margin="15">
        <TextBlock Text="Enter a new Name" HorizontalAlignment="Center"/>
        <TextBox x:Name="txtNewTitle" Text="New Note" Margin="5"/>
        <Button x:Name="btnChangeName" Content="Change Title" Margin="5"/>
    </StackPanel>
</Window>
